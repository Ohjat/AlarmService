<UserControl x:Class="FormTest.Controls.ResultFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FormTest.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        
        <ComboBox Grid.Row="0" Name="FormsComboBox" SelectionChanged="FormsComboBox_OnSelectionChanged" Margin="5"/>
        
        <DataGrid Grid.Row="1" Name="MainDataGrid" IsReadOnly="True"/>
    </Grid>
</UserControl>
