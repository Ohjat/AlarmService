<UserControl x:Class="Practical.ControlButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Practical"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="ButtonAdd" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="ClickAddB"/>
        <Button Grid.Row="1" Name="ButtonChange" Content="Изменить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="ClickChangeB"/>
        <Button Grid.Row="2" Name="ButtonDelete" Content="Удалить" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="ClickDeleteB"/>
        <Button Grid.Row="3" Name="ButtonCancel" Content="Отмена Выдедения" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="ClickCancelB"/>

    </Grid>
</UserControl>
