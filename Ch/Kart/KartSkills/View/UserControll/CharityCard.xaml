<UserControl x:Class="KartSkills.View.UserControll.CharityCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KartSkills.View.UserControll"
             FontFamily="Arial"
             mc:Ignorable="d" Height="100" Width="570">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="CardImage" Height="100" Width="100" HorizontalAlignment="Left" Source="/Resources/logo.png" Margin="0,0,50,0"/>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock x:Name="CardName" TextWrapping="Wrap" FontSize="18" Margin="0,0,0,5">Наименование благотворительной организации</TextBlock>
            <TextBlock x:Name="CardDescription" TextWrapping="Wrap" FontSize="15" >Описание благотворительности Описание благотворительности Описание благотворительности</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
